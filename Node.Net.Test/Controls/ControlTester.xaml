<UserControl x:Class="Node.Net.Controls.Test.ControlTester"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Node.Net.Controls.Test"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label>DataContext</Label>
            <ComboBox x:Name="dataContextComboBox" Grid.Column="1" SelectionChanged="dataContextComboBox_SelectionChanged" />
            <Label Grid.Column="2">FrameworkElement</Label>
            <ComboBox x:Name="frameworkElementComboBox" Grid.Column="3" SelectionChanged="frameworkElementComboBox_SelectionChanged"/>
        </Grid>
        <Frame Grid.Row="1" x:Name="frame" JournalOwnership="UsesParentJournal"/>
    </Grid>
</UserControl>
