@page "/maps"
@using Node.Net.Components

<PageTitle>Maps</PageTitle>

<h1>Maps</h1>

<p>This page demonstrates the Maps component with various locations.</p>

<div style="margin-bottom: 2rem;">
    <h2>San Francisco, CA</h2>
    <div style="width: 100%; height: 400px; border: 1px solid #ccc;">
        <Node.Net.Components.Maps Latitude="37.7749" Longitude="-122.4194" ZoomLevel="13" MapType="roadmap" />
    </div>
</div>

<div style="margin-bottom: 2rem;">
    <h2>New York, NY (Satellite View)</h2>
    <div style="width: 100%; height: 400px; border: 1px solid #ccc;">
        <Node.Net.Components.Maps Latitude="40.7128" Longitude="-74.0060" ZoomLevel="15" MapType="satellite" />
    </div>
</div>

<div style="margin-bottom: 2rem;">
    <h2>London, UK (Default Settings)</h2>
    <div style="width: 100%; height: 400px; border: 1px solid #ccc;">
        <Node.Net.Components.Maps Latitude="51.5074" Longitude="-0.1278" />
    </div>
</div>
